{
  "name": "my-time-trace-vscode",
  "displayName": "MyTimeTrace VSCode",
  "description": "Monitore seu tempo gasto em arquivos e projetos no VS Code",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "my-time-trace-vscode.startTracking",
        "title": "Iniciar Rastreamento",
        "icon": "$(play)"
      },
      {
        "command": "my-time-trace-vscode.pauseTracking",
        "title": "Pausar Rastreamento",
        "icon": "$(debug-pause)"
      },
      {
        "command": "my-time-trace-vscode.showStats",
        "title": "Mostrar Estatísticas",
        "icon": "$(graph)"
      }
    ],
    "configuration": {
      "title": "MyTimeTracker",
      "properties": {
        "myTimeTracker.idleTimeout": {
          "type": "number",
          "default": 5,
          "description": "Tempo em minutos antes de considerar o usuário inativo"
        },
        "myTimeTracker.autoStart": {
          "type": "boolean",
          "default": true,
          "description": "Iniciar o rastreamento automaticamente ao abrir o VS Code"
        },
        "myTimeTracker.showInStatusBar": {
          "type": "boolean",
          "default": true,
          "description": "Mostrar o tempo gasto na barra de status"
        }
      }
    },
    "menus": {
      "commandPalette": [
        {
          "command": "my-time-trace-vscode.startTracking",
          "when": "!isTracking"
        },
        {
          "command": "my-time-trace-vscode.pauseTracking",
          "when": "isTracking"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "dependencies": {
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/sinon": "17.0.4",
    "@types/sqlite3": "^3.1.11",
    "@types/vscode": "^1.100.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.25.1",
    "sinon": "20.0.0",
    "typescript": "^5.8.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/seu-usuario/MyTimeTraceVSCode"
  },
  "keywords": [
    "time tracking",
    "productivity",
    "statistics",
    "development"
  ]
}